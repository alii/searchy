{
	"compilerOptions": {
		"outDir": "dist",
		"module": "commonjs",
		"target": "esnext",
		"lib": ["esnext", "webworker"],
		"alwaysStrict": true,
		"strict": true,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"esModuleInterop": true,
		"types": ["@cloudflare/workers-types"],
		"skipLibCheck": true,
		"rootDir": "src"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
